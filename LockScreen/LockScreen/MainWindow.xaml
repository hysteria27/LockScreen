<Window x:Class="LockScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True" WindowStyle="None" WindowState="Maximized"
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Background="{x:Null}">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Storyboard.xaml" />
    </Window.Resources>
    <Canvas Name="Canvas">
        <Rectangle Fill="Red" Width="{Binding ActualWidth, ElementName=Canvas}" Height="{Binding ActualHeight, ElementName=Canvas}">
            <Rectangle.RenderTransform>
                <TranslateTransform x:Name="Translate" />
            </Rectangle.RenderTransform>
        </Rectangle>
    </Canvas>
</Window>
