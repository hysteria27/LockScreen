<UserControl x:Class="LockScreen.DateTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel.CacheMode>
            <BitmapCache EnableClearType="True"/>
        </StackPanel.CacheMode>
        <Label x:Name="Time" Content="00:00 AM" FontWeight="ExtraLight" FontSize="72" Foreground="White" Margin="0,0,0,-10" />
        <Label x:Name="Date" Content="Monday, 24 February" FontWeight="ExtraLight" FontSize="52" Foreground="White" />
    </StackPanel>
</UserControl>
